{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "wineapp",
	"annotations": {
	  "description": "Red Hat Food Application Template",
	  "tags": "java,database",
	  "version": "1.0"
        }
    },
    "labels": {
      "template": "wineapp",
      "wineapp": "1.0"
    },
    "parameters": [
        {
            "description": "The name for the application.",
            "name": "APPLICATION_NAME",
            "value": "wineapp",
            "required": true
        },
        {
            "description": "Custom hostname for service routes.  Leave blank for default hostname, e.g.: <application-name>.<project>.<default-domain-suffix>",
            "name": "APPLICATION_DOMAIN",
            "value": "",
            "required": false
        },
        {
            "description": "Database name",
            "name": "DB_DATABASE",
            "value": "winedb",
            "required": true
        },
        {
            "description": "Database user name",
            "name": "DB_USERNAME",
            "from": "user[a-zA-Z0-9]{3}",
            "generate": "expression",
            "required": true
        },
        {
            "description": "Database user password",
            "name": "DB_PASSWORD",
            "from": "[a-zA-Z0-9]{8}",
            "generate": "expression",
            "required": true
        },
        {
            "description": "GitHub trigger secret",
            "name": "GITHUB_WEBHOOK_SECRET",
            "from": "[a-zA-Z0-9]{8}",
            "generate": "expression",
            "required": true
        },
        {
            "description": "Generic build trigger secret",
            "name": "GENERIC_WEBHOOK_SECRET",
            "from": "[a-zA-Z0-9]{8}",
            "generate": "expression",
            "required": true
        }
    ],
    "objects": [
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-wine-service",
                "annotations": {
		   "description": "Wine Web Service"
		}

            },
            "spec": {
                "ports": [
                    {
                        "name": "8080-tcp",
                        "protocol": "TCP",
                        "port": 8080,
                        "targetPort": 8080
                    }
                ],
                "selector": {
                    "name": "${APPLICATION_NAME}-wine-service"
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-food-service",
                "annotations": {
		   "description": "Food Web Service"
		}

            },
            "spec": {
                "ports": [
                    {
                        "name": "web",
                        "port": 8080,
                        "targetPort": 8080
                    }
                ],
                "selector": {
                    "name": "${APPLICATION_NAME}-food-service"
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-postgresql"
            },
            "spec": {
                "ports": [
                    {
                        "name": "postgresql",
                        "port": 5432,
                        "targetPort": 5432
                    }
                ],
                "selector": {
                    "name": "${APPLICATION_NAME}-postgresql"
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-ui",
		"annotations": {
		   "description": "The UI frontend of the application"
		}
            },
            "spec": {
                "ports": [
                    {
                        "name": "web",
                        "port": 8080,
                        "targetPort": 8080
                    }
                ],
                "selector": {
                    "name": "${APPLICATION_NAME}-ui"
                }
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-route"
            },
            "spec": {
                "to": {
                    "kind": "Service",
                    "name": "${APPLICATION_NAME}-ui"
                }
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-ui",
		"annotations": {
			"description": "Keeps track of changes to the UI application"
		}
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-food-service",
		"annotations": {
			"description": "Keeps track of changes to the food-service application"
		}
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-wine-service",
		"annotations": {
			"description": "Keeps track of changes to the wine-service application"
		}
            }
        },
          {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-food-service"
            },
            "spec": {
                "source": {
                    "type": "Binary",
                    "binary": {}
                },
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "namespace": "openshift",
                            "name": "jboss-webserver30-tomcat8-openshift:latest"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${APPLICATION_NAME}-food-service:latest"
                    }
                }
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-ui"
            },
            "spec": {
                "source": {
                    "type": "Binary",
                    "binary": {}
                },
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "namespace": "openshift",
                            "name": "jboss-webserver30-tomcat8-openshift:latest"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${APPLICATION_NAME}-ui:latest"
                    }
                }
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-wine-service"
            },
            "spec": {
                "source": {
                    "type": "Binary",
                    "binary": {}
                },
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "namespace": "openshift",
                            "name": "jboss-webserver30-tomcat8-openshift:latest"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${APPLICATION_NAME}-wine-service:latest"
                    }
                }
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-food-service"
            },
            "spec": {
                "strategy": {
                    "type": "Rolling"                                     
               },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "${APPLICATION_NAME}-food-service"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${APPLICATION_NAME}-food-service:latest"
                            }
                        }
                    }
                ],
                "replicas": 1,
                "selector": {
                    "name": "${APPLICATION_NAME}-food-service"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "name": "${APPLICATION_NAME}-food-service"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "${APPLICATION_NAME}-food-service",
                                "image": "${APPLICATION_NAME}-food-service",
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "DATABASE_FQDN",
                                        "value": "${APPLICATION_NAME}-postgresql"
                                    },
                                    {
                                        "name": "DATABASE_NAME",
                                        "value": "${DB_DATABASE}"
                                    },
                                    {
                                        "name": "DATABASE_USER",
                                        "value": "${DB_USERNAME}"
                                    },
                                    {
                                        "name": "DATABASE_PASSWORD",
                                        "value": "${DB_PASSWORD}"
                                    }
                                ]
                            }
                        ]
                    }
                }
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-postgresql"
            },
            "spec": {
                "strategy": {
                    "type": "Recreate",
                    "recreateParams": {
                        "post": {
                            "failurePolicy": "Ignore",
                            "execNewPod": {
                                "containerName": "${APPLICATION_NAME}-postgresql",
                                "command": [ "/bin/sh","-i","-c","sleep 10 && psql -h $WINEAPP_POSTGRESQL_SERVICE_HOST -d $POSTGRESQL_DATABASE -U $POSTGRESQL_USER -c \"CREATE TABLE wine (wine_id integer NOT NULL,vineyard varchar(255) NOT NULL,varietal varchar(255) NOT NULL,name varchar(255) NOT NULL,year integer NOT NULL,country varchar(255) NOT NULL,PRIMARY KEY (wine_id));\n\nCREATE TABLE food (r_id integer NOT NULL,author varchar(255) NOT NULL,category varchar(255) NOT NULL,name varchar(255) NOT NULL,rating integer NOT NULL, country varchar(255) NOT NULL,PRIMARY KEY (r_id));\n\nINSERT INTO wine(wine_id, vineyard, varietal, name, year, country) VALUES (1,'Bordeaux', 'Summit2017', 'Bordeaux', 2011,'France');\nINSERT INTO wine(wine_id, vineyard, varietal, name, year, country) VALUES (2,'Bernardus', 'Summit2017', 'Bernardus', 2014,'USA');\nINSERT INTO wine(wine_id, vineyard, varietal, name, year, country) VALUES (3,'Aldenborgh', 'Summit2017', 'Aldenborgh Eyra', 2017,'Netherlands');\nINSERT INTO food(r_id, author, category, name, rating, country) VALUES (1,'Bakery', 'Bread', 'Baguette', 2017,'France'); \nINSERT INTO food(r_id, author, category, name, rating, country) VALUES (2,'Mc Donalds', 'Fast Food', 'Big Mac', 1977,'USA');\nINSERT INTO food(r_id, author, category, name, rating, country) VALUES (3,'Goudse', 'Agricultural', 'Cheese', 1184,'Netherlands');\n\"" 
                                ],
                                "env": [
                                    {
                                        "name": "PGPASSWORD",
                                        "value": "${DB_PASSWORD}"
                                    }
                                ]
                            }
                        }
                    }                    
                },
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "${APPLICATION_NAME}-postgresql"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "namespace": "openshift",
                                "name": "postgresql:latest"
                            }
                        }
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "selector": {
                    "name": "${APPLICATION_NAME}-postgresql"
                },
                "template": {
                    "metadata": {
                        "name": "${APPLICATION_NAME}-postgresql",
                        "labels": {
                            "name": "${APPLICATION_NAME}-postgresql"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "${APPLICATION_NAME}-postgresql",
                                "image": "registry.access.redhat.com/rhscl/postgresql-95-rhel7:latest",
                                "ports": [
                                    {
                                        "containerPort": 5432
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "POSTGRESQL_USER",
                                        "value": "${DB_USERNAME}"
                                    },
                                    {
                                        "name": "POSTGRESQL_PASSWORD",
                                        "value": "${DB_PASSWORD}"
                                    },
                                    {
                                        "name": "POSTGRESQL_DATABASE",
                                        "value": "${DB_DATABASE}"
                                    }
                                ]
                           }
                        ]
                    }
                }
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-ui"
            },
            "spec": {
                "strategy": {
                    "type": "Rolling"
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "${APPLICATION_NAME}-ui"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${APPLICATION_NAME}-ui:latest"
                            }
                        }
                    }
                ],
                "replicas": 1,
                "selector": {
                    "name": "${APPLICATION_NAME}-ui"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "name": "${APPLICATION_NAME}-ui"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "${APPLICATION_NAME}-ui",
                                "image": "ui",
                                "ports": [
                                    {
                                        "containerPort": 8080
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "FOOD_SERVICE",
                                        "value": "${APPLICATION_NAME}-food-service"
                                    },
                                    {
                                        "name": "WINE_SERVICE",
                                        "value": "${APPLICATION_NAME}-wine-service"
                                    }
                               ]
                            }
                        ]
                    }
                }
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-wine-service"
            },
            "spec": {
                "strategy": {
                    "type": "Rolling"
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "${APPLICATION_NAME}-wine-service"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${APPLICATION_NAME}-wine-service:latest"
                            }
                        }
                    }
                ],
                "replicas": 1,
                "selector": {
                    "name": "${APPLICATION_NAME}-wine-service"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "name": "${APPLICATION_NAME}-wine-service"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "${APPLICATION_NAME}-wine-service",
                                "image": "${APPLICATION_NAME}-wine-service",
                                "ports": [
                                    {
                                        "containerPort": 8080
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "DATABASE_FQDN",
                                        "value": "${APPLICATION_NAME}-postgresql"
                                    },
                                    {
                                        "name": "DATABASE_NAME",
                                        "value": "${DB_DATABASE}"
                                    },
                                    {
                                        "name": "DATABASE_USER",
                                        "value": "${DB_USERNAME}"
                                    },
                                    {
                                        "name": "DATABASE_PASSWORD",
                                        "value": "${DB_PASSWORD}"
                                    }
                                ]
                            }
                        ]
                    }
                }
            }
        }
    ]
}
